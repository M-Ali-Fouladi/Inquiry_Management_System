@model PagedList.IPagedList<CustomMembershipEF.Entities.UserRole>
@using PagedList.Mvc; 
@{
    

    ViewBag.Title = "ManageAdmin";
}
<div dir="rtl">

    @using (Html.BeginForm())
{ 
       <p>
    جستجو بر اساس نام:@Html.TextBox("SearchString");
          
</p>
    <p><input type="submit" value="جستجو" /></p>
 }
<h2>گروه کاربری</h2>

@* -------------------------------Table Users---------------------------------------------------- *@



<table id="view" dir="rtl">
    

    <tr>
        <th>
            
             @Html.DisplayName("کد کاربری")
        </th>
        
          <th>
            @Html.DisplayName("نام کاربری")
        </th>
        
        <th>
            @Html.DisplayName("نام")
        </th>
        <th>
            @Html.DisplayName("نام خانوادگی")
        </th>

        <th>
            @Html.DisplayName("نوع کاربری")
        </th>

    </tr>
    @{ 
        
       
        
            foreach(var item in Model)
{
        
    <tr >
     
        <td>
          
           @Html.DisplayFor(model => item.UserId)
        </td>
                <td>
            @Html.DisplayFor(model => item.User.UserName)
        
        </td>
        <td>
            @Html.DisplayFor(model => item.User.Name)
        
        </td>
      
        <td>
            @Html.DisplayFor(model =>item.User.Family)
        </td>

        <td>
            @Html.DisplayFor(model =>item.Role.RoleName)
        </td>


        <td>
              @Html.ActionLink("ویرایش", "AdminEdit", new {id=item.UserRoleId});
            
        </td>
            <td>
              @Html.ActionLink("حذف", "DeleteUser", new {id=item.UserRoleId });
            
        </td>
    </tr>
             
  
}
    }
    </table>
 <br />
     Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount 
     @Html.PagedListPager( Model, page => Url.Action("ManageAdmin", new { page, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter }) )


      
<a href="~/Teambox/Register" class="b_input">
      <input type="button" value="ایجاد کاربر جدید" >
   </a>
  <br />
    <a href="~/Teambox/CreateRole" class="b_input">
      <input type="button" value="ایجاد نقش جدید" >
   </a> 

  
  
    </div>
