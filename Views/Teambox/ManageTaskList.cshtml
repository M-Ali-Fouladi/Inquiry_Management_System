@model PagedList.IPagedList<CustomMembershipEF.Entities.TaskList>
@using PagedList.Mvc; 

@{
 //   Layout = "~/Views/Layouts/_LayoutUser.cshtml";
    ViewBag.Title = "Manage";
}
<div dir="rtl">
 @using (Html.BeginForm())
{ 
       <p>
    جستجو بر اساس نام:@Html.TextBox("SearchString");
          
</p>
    <p><input type="submit" value="جستجو" /></p>
 }

<h2> لیست کارها </h2>

@* -------------------------------Table Users---------------------------------------------------- *@



<table id="view" dir="rtl">
    

    <tr>
        <th>
            
             @Html.DisplayName("کد لیست")
        </th>
          <th>
            @Html.DisplayName("نام لیست")
        </th>

          <th>
            @Html.DisplayName("تاریخ شروع")
        </th>

          <th>
            @Html.DisplayName("تاریخ پایان")
        </th>



       
        
    </tr>
    @{ 
        
       
        
            foreach(var item in Model)
{
       
    <tr >
    
        <td>
          
           @Html.DisplayFor(model => item.ID)
        </td>
                <td>
            @Html.DisplayFor(model => item.TLName)
        
        </td>

                <td>
            @Html.DisplayFor(model => item.TLSdate)
        
        </td>

                <td>
            @Html.DisplayFor(model => item.TLEdate)
        
        </td>

           <td>
              @Html.ActionLink("کارها", "ManageTask", new {id=item.ID,Oid=@ViewBag.Oid,Pid=item.Pid});
           
        </td>
    
    </tr>
             
  
}
    }
    </table>
 <br />

    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount 
     @Html.PagedListPager( Model, page => Url.Action("ManageTaskList", new { page, sortOrder = ViewBag.CurrentSort, currentFilter=ViewBag.CurrentFilter }) )


      <h2>@ViewBag.message</h2>
<a href="~/Teambox/createTaskList/@ViewBag.Pid">
      <input type="button" value="ایجاد لیست کار جدید" >
   </a>
      <br />

       @Html.ActionLink("بازگشت به صفحه اصلی", "FirstPage")
  <br />
         @Html.ActionLink("بازگشت به صفحه مدیریت پروژه ها", "ManageProject", new { id=@ViewBag.Oid})
    

    </div>
    @*------------------------------------------------------------------------ *@

<style>
#view
{
font-family:"Trebuchet MS", Arial, Helvetica, sans-serif;
width:auto;
border-collapse:collapse;
}
#view td, #view th 
{
font-size:1em;
border:1px solid #98bf21;
padding:3px 7px 2px 7px;
}
#view th 
{
font-size:1.1em;
text-align:center;
padding-top:5px;
padding-bottom:4px;
background-color:#98bf21;
color:#ffffff;
}
#view tr.alt td 
{
color:#000000;
background-color:#ffd800;
}
</style>

 