@model CustomMembershipEF.Entities.UserRole

@{
    ViewBag.Title = "Register";
}

<h2>صفحه ثبت کاربر جدید</h2>
<p>
    لطفا اطلاعات خود را وارد کرده و سپس روی دکمه   ثبت کاربر   کلیک نمایید 
</p>
<p>
    کلمه عبور می بایست حداقل  @Membership.MinRequiredPasswordLength کاراکتر باشد .
</p>
@{
    if(ViewBag.error!=null)
    {
    <h2>@ViewBag.error</h2>
    }
    }
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
         
            <legend>Account Information</legend>
            
               @Html.HiddenFor(model => model.UserId)
               @Html.HiddenFor(model => model.User.UserId)


            <div class="editor-label">
                @Html.Label("نام کاربری")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.User.UserName)
                @Html.ValidationMessageFor(m => m.User.UserName)
            </div>

            <div class="editor-label">
                @Html.Label("نام")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.User.Name)
                @Html.ValidationMessageFor(m => m.User.Name)
            </div>


            <div class="editor-label">
                @Html.Label("نام خانوادگی")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.User.Family)
                @Html.ValidationMessageFor(m => m.User.Family)
            </div>


            <div class="editor-label">
                @Html.Label("ایمیل")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.User.UserEmailAddress)
                @Html.ValidationMessageFor(m => m.User.UserEmailAddress)
            </div>

            <div class="editor-label">
                @Html.Label("کلمه عبور")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.User.Password)
                @Html.ValidationMessageFor(m => m.User.Password)
            </div>

            <div class="editor-label">
                @Html.Label("تکرار کلمه عبور")
            </div>
            <div class="editor-field">
                @Html.PasswordFor(m => m.User.ConfirmPassword)
                @Html.ValidationMessageFor(m => m.User.ConfirmPassword)
            </div>

             <div class="editor-label">
            @Html.Label("نوع کاربری ")
        </div>
        <div class="editor-field">
          @Html.DropDownListFor(model => model.RoleId, (SelectList)ViewBag.RegisterRoleId);
        
        </div>
            <p>
                
                <input type="submit" value="ثبت کاربر" />
            </p>
        </fieldset>
    </div>
}
